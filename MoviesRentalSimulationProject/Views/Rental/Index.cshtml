@model IEnumerable<Models.MovieRent>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>List of Items</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Movie.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.ReturnDate)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.CustomerId)
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Movie.Name)
    </td>

    <td>
        @Html.DisplayFor(m => item.CustomerName)
    </td>
    <td>
        @Html.DisplayFor(m => item.Quantity)
    </td>
    <td>
        @Html.DisplayFor(m => item.ReturnDate)
    </td>
    <td>
        @Html.DisplayFor(m => item.CustomerId)
    </td>
</tr>
}

</table>