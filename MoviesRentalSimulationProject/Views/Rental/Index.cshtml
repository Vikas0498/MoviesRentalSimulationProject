@model IEnumerable<Models.MovieRent>
@{ ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>List of Items</h2>
<p>
    <a asp-action="Create" class="btn btn-primary btn-sm">Rent</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Movie.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Movie.Price)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Movie.NumberInStocks)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Movie.RealeaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.CustomerName)
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Movie.Name)
    </td>

    <td>
        @Html.DisplayFor(m => item.Movie.Price)
    </td>
    <td>
        @Html.DisplayFor(m => item.Movie.NumberInStocks)
    </td>
    <td>
        @Html.DisplayFor(m => item.Movie.RealeaseDate)
    </td>
    <td>
        @Html.DisplayFor(m => item.CustomerName)
    </td>
</tr>
}

</table>