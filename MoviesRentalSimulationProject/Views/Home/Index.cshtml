@model IEnumerable<Models.Movie>
@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>List of Items</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Price)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.RealeaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Genre.GenreName)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Id)
        </th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(m => item.Name)
    </td>

    <td>
        @Html.DisplayFor(m => item.Price)
    </td>
    <td>
        @Html.DisplayFor(m => item.RealeaseDate)
    </td>
    <td>
        @Html.DisplayFor(m => item.Genre.GenreName)
    </td>
    <td>
        @Html.DisplayFor(m => item.Id)
    </td>
    <td><partial name="_rentbuttonpartialview" model="item.Id" />

    </td>

</tr>}

</table>